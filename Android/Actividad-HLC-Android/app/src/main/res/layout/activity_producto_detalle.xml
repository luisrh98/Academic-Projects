<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen del producto -->
            <ImageView
                android:id="@+id/imgProductoDetalle"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen del producto"
                android:background="?android:attr/colorControlHighlight" />

            <!-- Nombre del producto -->
            <TextView
                android:id="@+id/txtNombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginTop="16dp" />

            <!-- Precio del producto -->
            <TextView
                android:id="@+id/txtPrecioProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:textSize="18sp"
                android:textColor="?android:attr/colorAccent"
                android:layout_marginTop="8dp" />

            <!-- Descripci贸n del producto -->
            <TextView
                android:id="@+id/txtDescripcionProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripci贸n del producto"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="16dp" />

            <!-- Secci贸n de comentarios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtComentariosLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comentarios:"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnAgregarComentario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar"
                    android:background="@color/primary_color"
                    android:textColor="?android:attr/textColorPrimary"
                    android:drawableStart="@android:drawable/ic_menu_add"
                    android:drawablePadding="8dp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- RecyclerView para mostrar los comentarios -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerComentarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="vertical"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bot贸n volver, fijado en la parte inferior -->
    <Button
        android:id="@+id/btnVolverDetalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_margin="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="?android:attr/textColorPrimary"
        android:drawableStart="@android:drawable/ic_menu_revert"
        android:drawablePadding="8dp"
        android:padding="12dp" />
</LinearLayout>